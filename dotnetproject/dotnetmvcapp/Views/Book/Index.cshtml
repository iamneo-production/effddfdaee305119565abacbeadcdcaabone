@model IEnumerable<dotnetmvcapp.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>
<p><a asp-action="Search">Search Book </a></p>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Price</td>
                    <td>@book.Quantity</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@book.Id">
                            Update
                        </a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@book.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagingDiv" page-model="@ViewBag.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="paging" page-class-selected="active"></div>
}
else
{
    <p>No books found.</p>
}
